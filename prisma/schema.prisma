generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  idUsuario  Int @id @default(autoincrement()) @map("id_usuario")
  nombre String
  correo  String  @unique
  contrase√±a String
  fechaCreado DateTime @default(now()) @map("fecha_creado")

  registros Registro[]
  refresh RefreshToken[]
  passwordResets PasswordReset[]
}

model Categoria {
  idCategoria Int @id @default(autoincrement()) @map("id_categoria")
  nombre String
  tipo String
  // Hacemos la FK opcional para evitar bloqueos al agregar la columna
  idPrioridad Int? @map("id_prioridad")

  prioridad Prioridad? @relation(fields: [idPrioridad], references: [idPrioridad])
  registros Registro[]
}

model Prioridad {
  idPrioridad Int @id @default(autoincrement()) @map("id_prioridad")
  nivel String

  categorias Categoria[]
}

model Registro{
  idRegistro Int @id @default(autoincrement()) @map("id_registro")
  idUsuario Int @map("id_usuario")
  idCategoria Int @map("id_categoria")
  tipo String
  descripcion String
  monto Decimal
  fechaRegistro DateTime @map("fecha_registro")
  fechaCreacion DateTime @map("fecha_creacion")

  usuario Usuario @relation(fields: [idUsuario], references: [idUsuario])
  categoria Categoria @relation(fields: [idCategoria], references: [idCategoria])
}

model RefreshToken{
  idRefresh Int @id @default(autoincrement()) @map("id_refresh")
  idUsuario   Int
  token       String   @unique
  fechaExpiracion   DateTime
  fechaCreacion   DateTime @default(now())
  Revocado     Boolean  @default(false)
  usuario Usuario @relation(fields: [idUsuario], references: [idUsuario])
}

model PasswordReset{
  idReset Int @id @default(autoincrement()) @map("id_reset")
  idUsuario   Int
  token       String   @unique
  fechaExpiracion   DateTime
  fechaCreacion   DateTime @default(now())
  usuario Usuario @relation(fields: [idUsuario], references: [idUsuario])
}